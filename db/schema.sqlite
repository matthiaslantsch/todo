CREATE TABLE "bank" (
  -- bank_1536731313
  "idBank" integer NOT NULL PRIMARY KEY,
  "sphinx_id" integer NOT NULL,
  "bank" decimal(10, 0) NOT NULL DEFAULT 0
)

CREATE TABLE "task" (
  -- task_1536731314
  "idTask" integer NOT NULL PRIMARY KEY,
  "name" varchar(40) NOT NULL,
  "duedate" timestamp NOT NULL,
  "steps" integer NOT NULL DEFAULT 1,
  "donesteps" integer NOT NULL DEFAULT 0,
  "donedate" timestamp,
  "stepreward" integer NOT NULL DEFAULT 0,
  "donereward" integer NOT NULL DEFAULT 0,
  "priority" integer NOT NULL DEFAULT 1,
  "sphinx_id" integer NOT NULL
)

CREATE TABLE "reward" (
  -- reward_1536731315
  "idReward" integer NOT NULL PRIMARY KEY,
  "idTask" integer NOT NULL,
  "key" varchar(10) NOT NULL,
  "amount" integer NOT NULL,
  FOREIGN KEY ("idTask") REFERENCES "task"("idTask")
)